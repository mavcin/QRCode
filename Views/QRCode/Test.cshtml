@model QRCodeModel
@{
    ViewData["Title"] = "Generate QR Code";
    Layout = "_Layout2";
}

<div class="container">
    <div class="row">

        <div class="col-12">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="design-tab-pane" role="tabpanel" aria-labelledby="design-tab" tabindex="0">
                    <form asp-action="Test">
                        <div class="row">

                            <div class="col">
                                <div class="custom-block bg-white shadow-lg">
                                    <a>
                                        <div class="row mt-2 hideDiv" id="DIV1">
                                            <div class="col-lg-6 col-md-6 col-sm-12">
                                                <label>Enter your website URL</label>
                                                <input autocomplete="off" type="url" asp-for="WebsiteURL" class="form-control" />
                                            </div>
                                        </div>
                                    </a>
                                    <div class="row mt-2">
                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                            <button type="submit" class="btn btn-primary">Generate</button>
                                            <button type="reset" class="btn btn-secondary">Reset</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col">
                                <div class="custom-block bg-white shadow-lg">
                                    <a>
                                        <div class="d-flex">
                                            <div>
                                                @if (Model != null)
                                                {
                                                    if (!(Model.QRImageURL == null))
                                                    {
                                                        <div class="row mt-2" id="qrCodeImage">
                                                            <div class="col-lg-6 col-md-6 col-sm-12">
                                                                <img height="250" width="250" src="@Model.QRImageURL" />
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                            </div>

                                            <span class="badge bg-design rounded-pill ms-auto">100</span>
                                        </div>


                                    </a>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>

